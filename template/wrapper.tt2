<html>
<head>
    <title>[% title %]</title>
    <meta http-equiv="Content-Type" content="text/html;">
    <meta name="description" content="FW MX DW MX HTML">
    <link rel="stylesheet" href="[% cache('css/style.css') %]" type="text/css">
    <script type="text/javascript" src="javascript/jquery-1.3.1.min.js"></script>
    <script type="text/javascript" src="javascript/functions.js"></script>
</head>
<body id="[% name %]" bgcolor="#ffffff">

[% left = imgs.0 ? imgs.0.size() : 0 %]
[% right = imgs.1 ? imgs.1.size() : 0 %]
[% last = left > right ? left : right %]

<div class="wrapper">
    <div class="header">
        <img src="[% cache('images/header.png') %]"/>
    </div>
    <div class="phone">T: 778-318-0624</div>
    <div class="content">
        <table class="main">
            <tr>
                <td class="top left">
                    [% INCLUDE rollover.tt2 image=imgs.0.0 IF imgs.0.0 %]
                </td>
                <td rowspan="[% last %]">
                    [% content %]
                </td>
                <td class="top right">
                    [% INCLUDE rollover.tt2 image=imgs.1.0 IF imgs.1.0 %]
                </td>
            </tr>
            [% last = last - 1 %]
            [% FOR i = [1 .. last] %]
            <tr>
                <td class="left [% IF i < last %]middle[% ELSE %]bottom[% END %]">
                    [% INCLUDE rollover.tt2 image=imgs.0.$i IF imgs.0.$i %]
                </td>
                <td class="right [% IF i < last %]middle[% ELSE %]bottom[% END %]">
                    [% INCLUDE rollover.tt2 image=imgs.1.$i IF imgs.1.$i %]
                </td>
            </tr>
            [% END %]
        </table>
    </div>

    [% UNLESS nolinks %]
    [% MACRO selected(link) 1 IF link == name %]
    <ul class="menu">
        <li>
            [% INCLUDE rollover.tt2 href="/"
                image = {
                    selected => selected('home'),
                    name => "link_home"
                }
            %]
        </li>
        <li>
            [% INCLUDE rollover.tt2 href="about.html"
                image = {
                    selected => selected('about'),
                    name=>"link_about"
                }
            %]
        </li>
        <li>
            [% INCLUDE rollover.tt2 href="contact.html"
                image = {
                    selected => selected('contact'),
                    name => "link_contact"
                }
            %]
        </li>
        <li class="submenu">
            [% INCLUDE rollover.tt2 href="gallery1.html"
                image = {
                    selected => selected('gallery'),
                    name => "link_gallery"
                }
            %]
            <ul>
                [% FOR page = [1,2,3] %]
                <li>
                    [% INCLUDE rollover.tt2 href="gallery${page}.html"
                        image = { name=>"link_gallery${page}"}
                    %]
                </li>
                [% END %]
            </ul>
        </li>
        <li>
            [% INCLUDE rollover.tt2 href="testimonials.html"
                image = {
                    selected => selected('testimonial'),
                    name => "link_testimonial"
                }
            %]
        </li>
        <li>
            [% INCLUDE rollover.tt2 href="info.html"
                image = {
                    selected => selected('info'),
                    name => "link_info"
                }
            %]
        </li>
    </ul>
    [% END %]
</body>
</html>
